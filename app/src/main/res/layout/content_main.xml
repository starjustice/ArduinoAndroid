<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Connect_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Connect Device"
        app:layout_constraintBottom_toTopOf="@+id/WriteButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".6"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/WriteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Write Data"
        app:layout_constraintBottom_toTopOf="@+id/ReadButton"
        app:layout_constraintTop_toTopOf="@+id/Connect_device"
        app:layout_constraintLeft_toLeftOf="@+id/Connect_device"
        app:layout_constraintRight_toRightOf="@+id/Connect_device"
        app:layout_constraintTop_toBottomOf="@+id/Connect_device"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/ReadButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Read Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/WriteButton"
        app:layout_constraintRight_toRightOf="@+id/WriteButton"
        app:layout_constraintTop_toBottomOf="@+id/WriteButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        />




</android.support.constraint.ConstraintLayout>